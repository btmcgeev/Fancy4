<h1 class="text-center">Sign Up</h1>
{{#if message}}
    <h2>{{message}}</h2>
{{/if}}
<form action="/signup" method="post" class="text-center">
	<div class="form-group">
    	<label class="col-form-label padding-top text-left"> Email:
        <input class="form-control" name="username" type="email" placeholder="bob@bobjones.com" required>
    	</label>
	</div>
	<div class="form-group">
    	<label class="col-form-label padding-top text-left"> First Name:
        <input class="form-control" name="firstname" type="text" placeholder="Bob" required>
    	</label>
	</div>
	<div class="form-group">
    	<label class="col-form-label padding-top text-left"> Last Name:
        <input class="form-control" name="lastname" type="text" placeholder="Jones" required>
    	</label>
	</div>
	<div class="form-group">
    	<label class="col-form-label padding-top text-left"> Password:
        <input class="form-control" name="password" type="password" placeholder="Password" required>
    	</label>
	</div>
    <input class="btn btn-info" type="submit" value="Sign Up" />
</form>
