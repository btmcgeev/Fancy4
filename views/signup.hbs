<h1>Signup</h1>
{{#if message}}
    <h2>{{message}}</h2>
{{/if}}
<form action="/signup" method="post">
    <label> Email:
        <input name="username" type="email" placeholder="bob@bobjones.com" required>
    </label>
    <label> First Name:
        <input name="firstname" type="text" placeholder="Bob" required>
    </label>
    <label> Last Name:
        <input name="lastname" type="text" placeholder="Jones" required>
    </label>
    <label> Password:
        <input name="password" type="password" placeholder="Password" required>
    </label>
    <input type="submit">
</form>