<h1>Login</h1>
{{#if message}}
<h2>{{message}}</h2>
{{/if}}
<form action="/login" method="post">
    <label>
        <input name="username" type="text" placeholder="Username">
    </label>
    <label>
        <input name="password" type="password" placeholder="Password">
    </label>
    <input type="submit">
</form>