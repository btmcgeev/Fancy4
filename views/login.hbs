<div class="login">
    {{#if message}}
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <p class="bg-danger text-center text-danger" style="padding: 1em;">{{message}}</p>
            </div>
            <div class="col-md-4"></div>
        </div>
    {{/if}}
    <div class="row main">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="well well-lg">
                <h1>Login</h1>
                <br>
                <form action="/login" method="post">
                    <div class="form-group">
                        <label for="username">Email: </label>
                        <input id="username" class="form-control" name="username" type="email" title="Email" placeholder="user@rit.edu">
                    </div>
                    <div class="form-group">
                        <label for="password">Password: </label>
                        <input id="password" class="form-control" name="password" type="password" title="Password" placeholder="Password">

                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Remember Me
                        </label>
                    </div>
                    <button type="submit" class="btn btn-default">Login</button>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>