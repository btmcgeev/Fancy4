<!-- Call to Action Well -->
{{> userType}}
{{> search}}

{{#each papers}}
    {{#if start}}
        <!-- Content Row -->
        <div class="row">
    {{/if}}
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading"><h2>{{paper.title}}</h2></div>
                <div class="panel-body"><p>{{paper.abstract}}</p></div>
                <div class="panel-footer"><button type="button" class="btn btn-danger" onclick="viewPaper({{paper.id}})"> More Info</button></div>
            </div>
        </div>
        <!-- /.col-md-3 -->
    {{#if end }}
        </div>
        <!-- /.row -->
    {{/if}}
{{/each}}